@model List<EntityLayer.Concrete.Position>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<div class="container">
    <div class="column">
        <div class="col-12">
            <h3 class="titulo-tabla">Pozisyonlar </h3>
            <table id="ejemplo" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Pozisyon</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td><a href="/Admin/Position/UpdatePosition/@item.PositionID" class="btn btn-outline-success">Düzenle</a></td>
                            <td><a href="/Admin/Position/DeletePosition/@item.PositionID" class="btn btn-outline-danger">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Admin/Position/AddPosition" class="btn btn-outline-light">Yeni Pozisyon Girişi</a>
        </div>
    </div>
</div>
