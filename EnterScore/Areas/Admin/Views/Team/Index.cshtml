@model IEnumerable<EntityLayer.Concrete.Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<div class="container">
    <div class="column">
        <div class="col-12">
            <h3 class="titulo-tabla">Kulüpler </h3>
            <table id="ejemplo" class="table table-striped table-bordered" style="table-layout: fixed; text-align:center">
                <thead>
                    <tr>
                        <th>Kulüp Sembolü</th>
                        <th>Kulüp Adı</th>
                        <th>Kulüp Teknik Direktörü</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (!String.IsNullOrWhiteSpace(item.SignedUrl))
                                {
                                    <img width="75px" src="@item.SignedUrl" class="figure-img img-fluid rounded" alt="@item.SavedFileName">
                                }
                                else
                                {
                                    <span>No Photo Available</span>
                                }
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Coach.Name</td>
                            <td><a href="/Admin/Team/TeamUpdate/@item.TeamID" class="btn btn-outline-success">Güncelle</a></td>
                            <td><a href="/Admin/Team/DeleteTeam/@item.TeamID" class="btn btn-outline-danger">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Admin/Team/AddTeam" class="btn btn-outline-light">Yeni Kulüp Ekle</a>
        </div>
    </div>
</div>