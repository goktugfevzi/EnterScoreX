@model EntityLayer.Concrete.Team
@{
    ViewData["Title"] = "AddTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" onsubmit="submitForm()">
    <label>Kulüp Adı</label>
    <input type="text" class="form-control border" name="Name" />
    <br />
    <label>Kulüp Fotoğrafı</label>
    <input type="text" class="form-control border" name="ImageUrl" />
    <br />
    <label for="coachSelect">Teknik Direktör Seç:</label>
    <select id="coachSelect" name="CoachID" class="form-control">
        <option value="">Seçer misin ki lütfen? </option>
        @foreach (var item in ViewBag.CoachList)
        {
            <option value="@item.CoachID">@item.Name</option>
        }
    </select>
    <button type="submit" class="btn btn-info">Kulübü Kaydet</button>
</form>

<script>
    function submitForm() {
        var selectedCoachID = document.getElementById('coachSelect').value;
        document.getElementsByName('selectedCoach')[0].value = selectedCoachID;
    }
</script>
