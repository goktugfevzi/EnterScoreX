@model EntityLayer.Concrete.Stadium
@{
    ViewData["Title"] = "UpdateStadium";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Stadyum Güncelleme</h1>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" name="StadiumID" value="@Model.StadiumID" />
    <label>Stadyum Fotosu</label>
    <input type="file" class="form-control border" name="Photo" />
    <br />
    @if (!String.IsNullOrWhiteSpace(Model.SignedUrl))
    {
        <div class="md-col-2">
            @Html.DisplayNameFor(model => model.Photo)
        </div>
        <div cite="md-col-10">
            <img src="@Model.SignedUrl" class="figure-img img-fluid rounded" alt="@Model.SavedFileName">
        </div>
    }

    <input name="SavedUrl" type="hidden" class="form-control" />
    <input name="SavedFileName" type="hidden" class="form-control" />

    <label>Stadyum Adı</label>
    <input type="text" class="form-control border" name="Name" value="@Model.Name" />
    <br />
    <label>Şehir</label>

    <input type="text" class="form-control border" name="City" value="@Model.City" />
    <br />

    <label>Kapasite</label>
    <input type="text" class="form-control border" name="Capacity" value="@Model.Capacity" />
    <br />


    <button class="btn btn-outline-info">Stadyumu Güncelle</button>
    <a href="/Admin/Stadium" class="btn btn-outline-danger">Geri Dön</a>

</form>
