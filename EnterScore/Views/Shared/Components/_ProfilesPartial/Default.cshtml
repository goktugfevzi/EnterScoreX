@model EntityLayer.Concrete.Player

<div class="player-carear-details">
    <div class="container">

        <div class="row">
            <div class="col-sm-4">
                <div class="profile-images-match">
                    <img class="img-responsive" src="@Model.SignedUrl" width="370" height="370">
                </div>
            </div>
            <div class="col-sm-8">
                <div class="player-carryer-total-des">
                    <h1 id="profile-title"><b>@Model.Name</b> <span>#@Model.Number</span></h1>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="player-description">
                                <p>@Model.Description</p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="player-other-desc-inner">
                                <div class="player-desc-1">
                                    <div class="player-other-desc">
                                        <h1>@Model.Team.Name</h1>
                                        <p>Football Club</p>
                                    </div>
                                    <div class="player-other-desc">
                                        <h1>Date of Birth</h1>
                                        <p>@Model.BirthDate.ToString("dd MMM, yyyy")</p>
                                    </div>
                                    <div class="player-other-desc">
                                        <h1>Height & Weight</h1>
                                        <p>@Model.Height cm, @Model.Weight kg</p>
                                    </div>
                                </div>

                                <div class="player-desc-1">
                                    <div class="player-other-desc">
                                        <h1>Full Name</h1>
                                        <p>@Model.Name</p>
                                    </div>
                                    <div class="player-other-desc">
                                        <h1>Nationality</h1>
                                        <p>@Model.Nationality</p>
                                    </div>
                                    <div class="player-other-desc">
                                        <h1>Social</h1>
                                        <ul>
                                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                            <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                                            <li><a href="#"><i class="fa fa-vk"></i></a></li>
                                            <li><a href="#"><i class="fa fa-youtube-play"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
